{{#each user.blogs}}
  <div class="blog-post">
    <h2 id="blog-{{this.id}}" style="color: blue;">{{this.title}}</h2> <!-- Blue title -->
    <p>{{this.content}}</p>
    <p>Posted by: {{this.username}}</p>
    <p>Posted on: {{this.createdAt}}</p>
    <!-- Comment display logic below -->
    <div class="comments-section">
      {{#each this.comments}}
        <div class="comment">
          <p>{{this.comment_text}} - {{this.user.username}}</p>
        </div>
      {{/each}}
    </div>

    <button onclick="location.href='/dashboard/edit/{{this.id}}'">Update</button>
    <button onclick="deletePost({{this.id}})">Delete</button>
  </div>
{{/each}}

<h1>Add New Blog Post</h1>
<form id="new-blog-form">
  <div>
    <label for="title">Title</label>
    <input type="text" id="title" name="title" required />
  </div>
  <div>
    <label for="content">Content</label>
    <textarea id="content" name="content" required></textarea>
  </div>
  <button type="submit">Create Blog Post</button>
</form>



<script src="/js/dashboard.js"></script>
